{
  "name": "smuppy-aws-infrastructure",
  "version": "1.0.0",
  "description": "AWS CDK Infrastructure for Smuppy",
  "engines": {
    "node": ">=20.0.0"
  },
  "scripts": {
    "build": "tsc",
    "watch": "tsc -w",
    "cdk": "cdk",
    "deploy": "cdk deploy --all",
    "deploy:staging": "cdk deploy --all -c environment=staging",
    "deploy:prod": "cdk deploy --all -c environment=production",
    "destroy": "cdk destroy --all",
    "diff": "cdk diff",
    "synth": "cdk synth"
  },
  "dependencies": {
    "aws-cdk-lib": "^2.175.0",
    "constructs": "^10.3.0",
    "esbuild": "^0.27.2"
  },
  "devDependencies": {
    "@types/node": "^20.19.0",
    "aws-cdk": "^2.175.0",
    "typescript": "~5.9.2"
  }
}
