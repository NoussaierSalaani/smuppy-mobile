{
  "name": "smuppy-lambda-api",
  "version": "1.0.0",
  "private": true,
  "engines": {
    "node": ">=22.0.0"
  },
  "scripts": {
    "test": "jest",
    "test:coverage": "jest --coverage",
    "test:watch": "jest --watch"
  },
  "dependencies": {
    "@aws-sdk/client-cloudfront": "3.990.0",
    "@aws-sdk/client-cognito-identity-provider": "3.990.0",
    "@aws-sdk/client-comprehend": "3.990.0",
    "@aws-sdk/client-dynamodb": "3.990.0",
    "@aws-sdk/client-lambda": "3.990.0",
    "@aws-sdk/client-mediaconvert": "3.990.0",
    "@aws-sdk/client-rekognition": "3.990.0",
    "@aws-sdk/client-s3": "3.990.0",
    "@aws-sdk/client-secrets-manager": "3.990.0",
    "@aws-sdk/client-sns": "3.990.0",
    "@aws-sdk/rds-signer": "3.990.0",
    "@aws-sdk/s3-request-presigner": "3.990.0",
    "agora-access-token": "2.0.4",
    "firebase-admin": "12.0.0",
    "google-auth-library": "9.6.0",
    "ioredis": "5.3.2",
    "jsonwebtoken": "9.0.2",
    "jwks-rsa": "3.1.0",
    "pg": "8.14.1",
    "blurhash": "2.0.5",
    "sharp": "0.33.5",
    "stripe": "20.2.0",
    "uuid": "9.0.0"
  },
  "devDependencies": {
    "@types/aws-lambda": "^8.10.147",
    "@types/ioredis": "^5.0.0",
    "@types/jest": "^29.5.14",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/pg": "^8.11.11",
    "@types/uuid": "^9.0.7",
    "@typescript-eslint/eslint-plugin": "^8.32.1",
    "@typescript-eslint/parser": "^8.32.1",
    "esbuild": "^0.27.2",
    "eslint": "^9.0.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.4.6",
    "typescript": "~5.9.2"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/__tests__",
      "<rootDir>/../shared",
      "<rootDir>/../triggers",
      "<rootDir>/../websocket"
    ],
    "modulePaths": [
      "<rootDir>/../websocket/node_modules",
      "<rootDir>/../shared/node_modules"
    ],
    "testMatch": [
      "**/*.test.ts"
    ],
    "setupFilesAfterEnv": ["<rootDir>/__tests__/helpers/setup.ts"],
    "transform": {
      "^.+\\.ts$": ["ts-jest", { "diagnostics": false }]
    },
    "collectCoverageFrom": [
      "**/*.ts",
      "../shared/**/*.ts",
      "../triggers/**/*.ts",
      "../websocket/**/*.ts",
      "!**/*.d.ts",
      "!**/__tests__/**",
      "!**/node_modules/**"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 84.5,
        "functions": 93,
        "lines": 94.5,
        "statements": 94
      }
    }
  }
}
