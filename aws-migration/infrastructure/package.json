{
  "name": "smuppy-aws-infrastructure",
  "version": "1.0.0",
  "description": "AWS CDK Infrastructure for Smuppy",
  "engines": {
    "node": ">=20.0.0"
  },
  "scripts": {
    "build": "tsc",
    "watch": "tsc -w",
    "cdk": "cdk",
    "deploy": "cdk deploy --all",
    "deploy:dev": "cdk deploy --all -c environment=dev --require-approval never",
    "deploy:staging": "cdk deploy --all -c environment=staging --require-approval never",
    "deploy:prod": "cdk deploy --all -c environment=production",
    "destroy": "cdk destroy --all",
    "destroy:dev": "cdk destroy --all -c environment=dev --force",
    "diff": "cdk diff",
    "diff:dev": "cdk diff -c environment=dev",
    "diff:staging": "cdk diff -c environment=staging",
    "diff:prod": "cdk diff -c environment=production",
    "synth": "cdk synth",
    "synth:dev": "cdk synth -c environment=dev",
    "synth:staging": "cdk synth -c environment=staging",
    "synth:prod": "cdk synth -c environment=production"
  },
  "dependencies": {
    "aws-cdk-lib": "^2.237.1",
    "constructs": "^10.3.0",
    "dotenv": "^17.2.3",
    "esbuild": "^0.27.2"
  },
  "devDependencies": {
    "@types/node": "^20.19.0",
    "aws-cdk": "^2.1104.0",
    "typescript": "~5.9.2"
  }
}
