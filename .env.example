# Smuppy Environment Variables
# Copy this file to .env and fill in your values
# NEVER commit .env to version control — secrets must stay local

# Google APIs
GOOGLE_API_KEY=your-google-api-key-here

# Google OAuth Client IDs (for Sign-In with Google)
GOOGLE_IOS_CLIENT_ID=your-ios-client-id.apps.googleusercontent.com
GOOGLE_ANDROID_CLIENT_ID=your-android-client-id.apps.googleusercontent.com
GOOGLE_WEB_CLIENT_ID=your-web-client-id.apps.googleusercontent.com

# Environment (dev, staging, prod)
APP_ENV=development

# Agora (Live Streaming & Video Calls)
AGORA_APP_ID=your-agora-app-id

# Stripe (Payments) — NEVER commit real keys
EXPO_PUBLIC_STRIPE_PUBLISHABLE_KEY=your-stripe-publishable-key-here
STRIPE_SECRET_KEY=your-stripe-secret-key-here

# AWS Configuration
AWS_REGION=us-east-1
S3_BUCKET_NAME=smuppy-media-staging-xxx
CLOUDFRONT_URL=https://xxx.cloudfront.net

# AWS Config (used by src/config/aws-config.ts)
EXPO_PUBLIC_ENV=staging
EXPO_PUBLIC_AWS_REGION=us-east-1
EXPO_PUBLIC_COGNITO_USER_POOL_ID=us-east-1_xxx
EXPO_PUBLIC_COGNITO_CLIENT_ID=xxx
EXPO_PUBLIC_COGNITO_IDENTITY_POOL_ID=us-east-1:xxx
EXPO_PUBLIC_API_REST_ENDPOINT=https://xxx.execute-api.us-east-1.amazonaws.com/staging
EXPO_PUBLIC_API_GRAPHQL_ENDPOINT=https://xxx.appsync-api.us-east-1.amazonaws.com/graphql
EXPO_PUBLIC_API_WEBSOCKET_ENDPOINT=wss://xxx.execute-api.us-east-1.amazonaws.com/staging
EXPO_PUBLIC_S3_BUCKET=smuppy-media-staging-xxx
EXPO_PUBLIC_CDN_DOMAIN=https://xxx.cloudfront.net
EXPO_PUBLIC_DYNAMODB_FEED_TABLE=smuppy-feeds-staging
EXPO_PUBLIC_DYNAMODB_LIKES_TABLE=smuppy-likes-staging
SENTRY_DISABLE_AUTO_UPLOAD=true

# Mapbox — use PUBLIC token (pk.) here, not SECRET (sk.)
MAPBOX_ACCESS_TOKEN=pk.your_public_mapbox_token
RNMAPBOX_MAPS_DOWNLOAD_TOKEN=sk.your_secret_download_token

# Sentry Error Tracking
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
