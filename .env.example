# Smuppy Environment Variables
# Copy this file to .env and fill in your values
# NEVER commit .env to version control

# Google APIs
GOOGLE_API_KEY=your-google-api-key-here

# Google OAuth Client IDs (for Sign-In with Google)
GOOGLE_IOS_CLIENT_ID=your-ios-client-id.apps.googleusercontent.com
GOOGLE_ANDROID_CLIENT_ID=your-android-client-id.apps.googleusercontent.com
GOOGLE_WEB_CLIENT_ID=your-web-client-id.apps.googleusercontent.com

# Backend API
API_URL_DEV=http://localhost:3000/api
API_URL_PROD=https://api.smuppy.com/api

# Environment (dev, staging, prod)
APP_ENV=dev

# Sentry Error Tracking (optional but recommended for production)
# Get your DSN from: https://sentry.io
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# Agora (Live Streaming & Video Calls)
AGORA_APP_ID=your-agora-app-id

# AWS Configuration
AWS_REGION=us-east-1
S3_BUCKET_NAME=smuppy-media-staging
CLOUDFRONT_URL=https://your-distribution.cloudfront.net
